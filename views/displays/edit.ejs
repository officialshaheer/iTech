<style type="text/css">
	body {
		background-color: white;
	}
	h1{
		color: #1d1d1f;
		padding-top: 10px;
	}
	h2{
		color: #1d1d1f;
		padding-top: 10px;
	}
	.card {
	  /* Add shadows to create the "card" effect */
	  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
	  transition: 0.3s;
	  border-radius: 15px 15px;
	  color: #86868b;
	  background-color: #e5f5b7;
	  width: 40%;
	}

	/* On mouse-over, add a deeper shadow */
	.card:hover {
	  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
	}
</style>

<div class="card">
<center>
<h2>Edit Post!</h2>
<form action="/displays/<%= display.id %>?_method=PUT" method="POST">
<input type="text" name="title" placeholder="Title" value="<%= display.title %>">
<br><input type="text" name="price" placeholder="Price" value="<%= display.price %>">
<br><textarea name="description"  placeholder="Description"><%= display.description %></textarea>
<br><input type="text" name="location" placeholder="Location" value="<%= display.location %>">
<br>
<input type="submit">
</form>

</center><br>
</div>